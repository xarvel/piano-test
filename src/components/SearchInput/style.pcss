.search-input{
  display: flex;
  &__input{
    padding: 10px;
    flex-grow: 1;
    font-size: 25px;
  }

  &__button{
    text-decoration: none;
    font-size: 16px;
    cursor: pointer;


    border-radius: 3px;
    background-color: white;
    color: black;
    border: 2px solid #e7e7e7;
    text-align: center;
  }
}
